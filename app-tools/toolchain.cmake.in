#
# CMake toolchain file for cross-compiling to !TOOLTUPLE!
#
# When building software with CMake, specify as -DCMAKE_TOOLCHAIN_FILE=...
#

set(CMAKE_SYSTEM_NAME Generic)

set(CMAKE_C_COMPILER !TOOLS_CC!)
set(CMAKE_CXX_COMPILER !TOOLS_CXX!)

set(CMAKE_FIND_ROOT_PATH !DESTDIR!/rumprun-!MACHINE_GNU_ARCH!)
set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
if(NOT CMAKE_FIND_ROOT_PATH_MODE_LIBRARY)
    set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
endif()
if(NOT CMAKE_FIND_ROOT_PATH_MODE_INCLUDE)
    set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)
endif()
if(NOT CMAKE_FIND_ROOT_PATH_MODE_PACKAGE)
    set(CMAKE_FIND_ROOT_PATH_MODE_PACKAGE ONLY)
endif()
